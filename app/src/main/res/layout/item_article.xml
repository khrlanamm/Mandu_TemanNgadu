<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shimmer_auto_start="false">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/articleImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/placeholder_bg"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundImageView" />

        </com.facebook.shimmer.ShimmerFrameLayout>


        <TextView
            android:id="@+id/articleTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/shimmer_view_container"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/shimmer_view_container"
            card_view:layout_constraintTop_toTopOf="@+id/shimmer_view_container"
            tools:ignore="SmallSp"
            tools:text="@string/article_title_data" />

        <TextView
            android:id="@+id/articleDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:textSize="11sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/shimmer_view_container"
            card_view:layout_constraintEnd_toEndOf="@+id/articleTitle"
            card_view:layout_constraintStart_toStartOf="@+id/articleTitle"
            card_view:layout_constraintTop_toBottomOf="@+id/articleTitle"
            card_view:layout_constraintVertical_bias="0.0"
            tools:ignore="SmallSp"
            tools:text="@string/article_description_data" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
